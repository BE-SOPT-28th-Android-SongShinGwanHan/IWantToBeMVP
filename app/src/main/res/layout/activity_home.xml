<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="homePresenter"
            type="com.hk.iwanttobesupermvp.presenter.home.HomePresenter" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.HomeActivity">

        <ImageView
            android:id="@+id/home_image_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_launcher_foreground"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:contentDescription="profile" />

        <TextView
            android:id="@+id/home_id_small_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/home_image_view"
            app:layout_constraintTop_toBottomOf="@id/home_image_view" />

        <TextView
            android:id="@+id/home_id_medium_text"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/home_id_small_text"
            app:layout_constraintTop_toBottomOf="@id/home_id_small_text" />

        <TextView
            android:id="@+id/home_user_description_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_user_descripton"
            app:layout_constraintStart_toStartOf="@id/home_id_small_text"
            app:layout_constraintTop_toBottomOf="@id/home_id_medium_text" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/home_more_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_more_button_text"
            android:setOnRxDebounce="@{() ->homePresenter.onHomeMoreButtonClick()}"
            app:layout_constraintEnd_toEndOf="@id/home_image_view"
            app:layout_constraintBottom_toBottomOf="@id/home_user_description_text" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/home_fragment_container_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/home_user_description_text"
            app:layout_constraintStart_toStartOf="@id/home_image_view"
            app:layout_constraintEnd_toEndOf="@id/home_image_view"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>